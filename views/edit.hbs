{{#if errors}}
<div class="error-containers">
    {{#each errors}}
        <p>{{this}}</p>
    {{/each}}
</div>
{{/if}}

<form class="edit-form" method="post">
    <label for="name">Name of Planet:</label>
    <input type="text" id="name" name="name" {{#if planet.name}}value="{{planet.name}}" {{/if}}>

    <label for="age">Age (in billion years):</label>
    <input type="number" id="age" name="age" {{#if planet.age}}value="{{planet.age}}" {{/if}}>

    <label for="solarSystem">Solar System:</label>
    <input type="text" id="solarSystem" name="system" {{#if planet.system}}value="{{planet.system}}" {{/if}}>

    <label for="type">Type:</label>
    <select id="type" name="type">
        <option value="Inner" {{#if (eq planet.type 'Inner' )}}selected{{/if}}>Inner</option>
        <option value="Outer" {{#if (eq planet.type 'Outer' )}}selected{{/if}}>Outer</option>
        <option value="Dwarf" {{#if (eq planet.type 'Dwarf' )}}selected{{/if}}>Dwarf</option>
    </select>

    <label for="moons">Moons (count):</label>
    <input type="number" id="moons" name="moons" {{#if planet.moons}}value="{{planet.moons}}" {{/if}}>

    <label for="size">Size (in km):</label>
    <input type="number" id="size" name="size" {{#if planet.size}}value="{{planet.size}}" {{/if}}>

    <label for="rings">Rings:</label>
    <select id="rings" name="rings">
        <option value="Yes" {{#if (eq planet.rings 'Yes' )}}selected{{/if}}>Yes</option>
        <option value="No" {{#if (eq planet.rings 'No' )}}selected{{/if}}>No</option>
    </select>

    <label for="description">Description:</label>
    <textarea id="description" name="description"
        rows="4"> {{#if planet.description}}{{planet.description}}{{/if}}</textarea>

    <label for="image">Image URL:</label>
    <input type="url" id="image" name="image" {{#if planet.image}}value="{{planet.image}}" {{/if}}>

    <button type="submit">Save Changes</button>
</form>









<section class="form-container">
    <h2>Edit Recipe</h2>
    <form method="post">
        <label for="name">Product Name:</label>
        <input type="text" id="name" name="name" {{#if product.name}}value="{{product.name}}" {{/if}}>

        <label for="skin">Skin Type:</label>
        <textarea id="skin" name="skin"> {{#if product.skin}}{{product.skin}}{{/if}}</textarea>

        <label for="description">Product Description:</label>
        <textarea id="description"
            name="description"> {{#if product.description}}{{product.description}}{{/if}}</textarea>

        <label for="ingredients">Key Ingredients:</label>
        <textarea id="ingredients"
            name="ingredients"> {{#if product.ingredients}}{{product.ingredients}}{{/if}}</textarea>

        <label for="benefits">Benefits:</label>
        <textarea id="benefits" name="benefits"> {{#if product.benefits}}{{product.benefits}}{{/if}}</textarea>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" {{#if product.price}}value="{{product.price}}" {{/if}}>

        <label for="image">Image URL:</label>
        <input type="url" id="image" name="image" {{#if product.image}}value="{{product.image}}" {{/if}}>

        <button type="submit">Create Product Card</button>
    </form>
</section>